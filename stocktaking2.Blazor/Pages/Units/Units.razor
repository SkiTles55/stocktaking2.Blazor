                                                    }
                                                    break;
                                                case "serial":
                                                    <th><a href="units/" class="text-decoration-none" @onclick="(()=>SetSort(currentSort == 21 ? 22 : 21))"><i class="@SortClass(21, 22)"></i> Серийный номер</a></th>
                                                    break;
