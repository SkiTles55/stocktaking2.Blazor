                                </div>
                            </div>
                        }
                        @if (activityLog.departamentHistories.Count > 0)
                        {
                            <div class="col-12">
                                <div class="card shadow mb-4 border-left-primary">
                                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                        <h5 class="m-0 font-weight-bold text-primary">Отделы</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered table-sm">
                                                <thead>
                                                    <tr>
                                                        <th class="th-history">Дата/Время</th>
                                                        <th>Изменения</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var ul in activityLog.departamentHistories)
                                                    {
                                                        <tr>
                                                            <td>@ul.Time.ToString("g")</td>
                                                            <td>@ul.Changes</td>
                                                        </tr>
                                                    }
                                                </tbody>
