@page
@model LoginModel
@{
    ViewData["Title"] = "Авторизация - Учет техники";
}
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Авторизация</h1>
                            </div>
                            <form class="user" id="account" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <input type="Email" asp-for="Input.Email" class="form-control form-control-user" id="Login" aria-describedby="EmailHelp" placeholder="Email">
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Input.Password" class="form-control form-control-user" id="Password" placeholder="Пароль">
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input type="checkbox" asp-for="Input.RememberMe" class="custom-control-input" id="customCheck">
                                        <label class="custom-control-label" for="customCheck">Запомнить меня</label>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Войти
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <p class="small">Copyright &copy; Худяков Д.С. 2021</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}